{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
        "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*.ts", "src/config/mikro-orm.config.ts"],
  "exclude": ["node_modules", "dist", "tests"]
}